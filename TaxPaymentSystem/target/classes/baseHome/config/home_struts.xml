<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="sysHome-action" extends="struts-default" namespace="/sys" strict-method-invocation="false">
        <action name="home_*" class="baseHome.home.HomeAction" method="{1}">
            <result name="{1}">/WEB-INF/home/{1}.jsp</result>
            <result name="home">/WEB-INF/home/home.jsp</result>
        </action>
    </package>

</struts>